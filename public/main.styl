gold = #FFB90F

body
	padding 0
	margin 0
	font-family Georgia

h1
	color gold
	text-shadow rgb(201, 198, 198) 2px 1px 4px
	font-size 3rem

	small
		font-size 2rem
		text-shadow none
		color #666
		font-weight normal

#wrapper
	width 80%
	margin 0 auto

#editordiv, #collsdiv, #docsdiv, #editorhead, #collshead, #docshead
	-webkit-transition width 500ms
	-moz-transition width 500ms
	overflow hidden

#editor
	width 100%
	height 200px

#body, #heads
	div.cell.hidden
		width 0%
		overflow hidden
		border 0
		padding 0

#body, #heads
	.cell
		margin-right 2%
		padding 1%

ul
	padding 0
	margin 0
	list-style none

	li
		padding 2px 2px 2px 10px
		cursor pointer
		border-radius 4px

	li:hover
		background-color lighten(gold, 80%)

	li.active
		background-color lighten(gold, 60%)

#body
	.cell
		border 1px solid #EEE
		border-radius 6px
		box-shadow gold 2px 2px 10px

#heads
	.cell
		font-weight	bold